<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="4dp">

    <TextView
        android:id="@+id/tvDocumentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/documentMovingType"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/tvDocumentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/documentNumber"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvArrivalDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrivalDate"
        android:textSize="14sp"
        android:layout_marginTop="2dp"/>

    <Button
        android:id="@+id/btnOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnOpenDocument"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/blue"/>

</LinearLayout>
