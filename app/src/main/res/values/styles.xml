<resources>
    -
    <style name="TableButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:backgroundTint">@null</item> -
    </style>

    -
    <style name="AddButton" parent="TableButton">
        <item name="android:background">@drawable/btn_green</item>
    </style>

    -
    <style name="SaveButton" parent="TableButton">
        <item name="android:background">@drawable/btn_blue</item>
    </style>


    <style name="DeleteButton" parent="TableButton">
        <item name="android:background">@drawable/btn_red</item>
    </style>

    <style name="ErrorTextAppearance" parent="@style/TextAppearance.Design.Error">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/design_default_color_error</item>
        <item name="android:paddingTop">4dp</item>
    </style>
</resources>